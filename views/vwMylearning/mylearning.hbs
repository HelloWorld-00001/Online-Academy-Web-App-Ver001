    <script>
        $(document).ready(function(){
            // Add down arrow icon for collapse element which is open by default
            $(".collapse.show").each(function(){
                $(this).prev(".card-header").find(".fa").addClass("fa-angle-down").removeClass("fa-angle-right");
            });

            // Toggle right and down arrow icon on show hide of collapse element
            $(".collapse").on('show.bs.collapse', function(){
                $(this).prev(".card-header").find(".fa").removeClass("fa-angle-right").addClass("fa-angle-down");
            }).on('hide.bs.collapse', function(){
                $(this).prev(".card-header").find(".fa").removeClass("fa-angle-down").addClass("fa-angle-right");
            });
        });

        $('.owl-carousel').owlCarousel({
            margin: 15,
            nav: true,
            autoplay: true,
            loop: true,
            navText: ["<div class='nav-button owl-prev bg-color'>‚Äπ</div>", "<div class='nav-button owl-next bg-color'>‚Ä∫</div>"],
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 1
                },
                1000: {
                    items: 2
                }
            }
        });

        $('.disabled').click(function(e){
            e.preventDefault();
        });

        $(function () {
            if($(".course-review:hidden").length < 4) {
                $(".load-more").css('visibility', 'hidden');
            }

            $(".course-review").slice(0, 4).show();
            $("body").on('click touchstart', '.load-more', function (e) {
                e.preventDefault();
                $(".course-review:hidden").slice(0, 4).slideDown();
                if ($(".course-review:hidden").length === 0) {
                    $(".load-more").css('visibility', 'hidden');
                }
                $('html,body').animate({
                    scrollTop: $('.load-more').offset().top - 500
                }, 1000);
            });
        });

        $(function () {

            if ($(".list-course:hidden").length > 10) {
                $(".more-section").removeClass('d-none').addClass('d-inline-block');

            }

            $(".list-course").slice(0, 10).show();
            $(".more-section").text($(".list-course:hidden").length + " more sections");
            $("body").on('click touchstart', '.more-section', function (e) {
                e.preventDefault();
                $(".list-course:hidden").slice(0, $(".list-course:hidden").length).slideDown();
                if ($(".list-course:hidden").length === 0) {
                    $(".more-section").removeClass('d-inline-block').addClass('d-none');
                }
                // $('html,body').animate({
                //     scrollTop: $('.more-section').offset().top - 500
                // }, 1000);
            });
        });


        $( "#close-icon" ).click(function() {
            $( "#courseDiv" ).css('display', 'none')
            $( ".sidebarMini" ).css('display', 'block')
            $( "#videoDiv" ).removeClass('col-md-9').addClass('col-12');
            $( "#video-container" ).addClass('col-12')
        });

        $( ".sidebarMini__button" ).click(function() {
            $( ".sidebarMini" ).css('display', 'none')
            $( "#courseDiv" ).css('display', 'block')
            $( "#videoDiv" ).removeClass('col-12').addClass('col-md-9');
        });

        $( "#navlink-reviews" ).click(function() {
            var delay = 1000;
            $(".progress-bar").each(function(i){
                $(this).delay( delay*i ).animate( { width: $(this).attr('aria-valuenow') + '%' }, delay );

                $(this).prop('Counter',0).animate({
                    Counter: $(this).text()
                }, {
                    duration: delay,
                    easing: 'swing',
                    step: function (now) {
                        $(this).text(Math.ceil(now)+'%');
                    }
                });
            });
        });

        if ( window.history.replaceState ) {
            window.history.replaceState( null, null, window.location.href );
        }

        var modal = document.querySelector(".modal-review");
        var trigger = document.querySelector(".trigger");
        var closeButton = document.querySelector(".close-review-button");

        const editReview = document.querySelector(".edit-review");
        const deleteReview = document.querySelector(".delete-review");
        const reviewed = document.querySelector(".has-reviewed");
        const title = document.querySelector(".review-title")

        function toggleModal() {
            modal.classList.toggle("show-modal-review");
            reviewed.style.display = "block";
            editReview.style.display = "none";
            deleteReview.style.display = "none";
            title.style.display = "block";
        }

        function windowOnClick(event) {
            if (event.target === modal) {
                toggleModal();
            }
        }

        trigger.addEventListener("click", toggleModal);
        closeButton.addEventListener("click", toggleModal);
        window.addEventListener("click", windowOnClick);

        const nextBtn = document.querySelector(".btn-review-next");
        const post = document.querySelector(".post");
        const widget = document.querySelector(".star-widget");
        const backBtn = document.querySelector(".btn-review-back");
        const saveBtn = document.querySelector(".btn-submit-save");
        nextBtn.onclick = ()=>{
            widget.style.display = "none";
            post.style.display = "block";
            title.style.display = "none";
            backBtn.onclick = ()=>{
                title.style.display = "block";
                widget.style.display = "block";
                post.style.display = "none";
            }
            saveBtn.onclick = ()=>{
                modal.style.display = "none";
            }
            return false;
        }


        const editBtn = document.querySelector(".btn-review-edit");
        const deleteBtn = document.querySelector(".btn-review-delete")
        const deleteSubmitBtn = document.querySelector(".btn-submit-delete");
        const editTitle = document.querySelector(".edit-review-title")
        const deleteTitle = document.querySelector(".delete-review-title")
        const cancelBtn = document.querySelector(".btn-review-cancel");


        editBtn.onclick = () => {
            editReview.style.display = "block";
            deleteReview.style.display = "none";
            reviewed.style.display = "none";
            nextBtn.onclick = ()=>{
                widget.style.display = "none";
                post.style.display = "block";
                editTitle.style.display = "none";
                backBtn.onclick = ()=>{
                    editTitle.style.display = "block";
                    widget.style.display = "block";
                    post.style.display = "none";
                }
                saveBtn.onclick = ()=>{
                    modal.style.display = "none";
                }
                return false;
            }
        }

        deleteBtn.onclick = () => {
            deleteReview.style.display = "block";
            reviewed.style.display = "none";

            cancelBtn.onclick = ()=>{
                reviewed.style.display = "block";
                deleteReview.style.display = "none";
            }

            deleteSubmitBtn.onclick = () => {
                modal.style.display = "none";
            }
        }
    </script>
{{/section}}
