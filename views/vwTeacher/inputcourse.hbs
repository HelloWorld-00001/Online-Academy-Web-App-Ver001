<form method="post" id="frmInputCourse" class="container-fluid py-10">
    <div class="card container-fluid py-5 px-5">
<!--        NameCourse-->
        <div class="form-group">
            <label for="txtNameCourse">Tên Khóa học</label>
            <input name="namecourse" type="text" class="form-control" id="txtNameCourse" autofocus>
        </div>
<!--        Image of course-->
        <div class="form-group">
            <label for="exampleFormControlFile1">Thêm ảnh</label>
            <input name="image" type="file" class="form-control-file" id="exampleFormControlFile1">
        </div>
<!--        Start Day-->
        <div class="form-group">
            <label for="example">Ngày bắt đầu</label>
            <i class="fas fa-calendar input-prefix"></i>
            <input placeholder="Select date" type="text" id="txtDateStart" name="startdate" class="form-control">
        </div>
<!--        End Day-->
        <div class="form-group">
            <label for="example">Ngày kết thúc</label>
            <i class="fas fa-calendar input-prefix"></i>
            <input placeholder="Select date" type="text" id="txtDateEnd" name="enddate" class="form-control">
        </div>
<!--        Short Description-->
        <div class="form-group">
            <label>Mô tả ngắn gọn</label>
            <textarea name="shortdescription" class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
        </div>
<!--        Description-->
        <div class="form-group">
            <label>Mô tả</label>
            <textarea id="description" name="description">
                Your description
            </textarea>
        </div>
<!--        Price-->
        <div class="form-group">
            <label for="txtPrice">Học phí  </label>
            <div class="input-group mb-2">
                <input name="price" type="number" class="form-control" id="txtPrice" autofocus>
                <div class="input-group-append">
                    <span class="input-group-text">vnd</span>
                </div>
            </div>
        </div>
<!--        Discount-->
        <div class="form-group">
            <label for="txtDiscount">Khuyến mãi</label>
            <div class="input-group mb-2">
                <input name="discount" type="number" class="form-control" id="txtDiscount" autofocus>
                <div class="input-group-append">
                    <span class="input-group-text">%</span>
                </div>
            </div>
        </div>
<!--        Topic-->
        <div class="form-group container-fluid">
            <div class="row">
                <div class="col-md-12 form_sec_outer_task border">
                    <div class="row">
                        <div class="col-md-12 bg-light p-2 mb-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4 class="frm_section_n">Đề cương khóa học</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Chủ đề</label>
                        </div>
                        <div class="col-md-4">
                            <label> Link</label>
                        </div>
                    </div>
                    <div class="col-md-12 p-0">
                        <div class="col-md-12 form_field_outer p-0">
                            <div class="row form_field_outer_row">
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control w_90" name="topic_no[]" id="topic_no_1" placeholder="Nhập chủ đề" />
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon3">URL:</span>
                                        </div>
                                        <input name= "url_no[]" type="text" class="form-control" id="url_no_1" aria-describedby="basic-addon3">
                                    </div>
                                </div>
                                <div class="form-group col-md-2 add_del_btn_outer">
                                    <button class="btn_round add_node_btn_frm_field" title="Copy dòng này">
                                        <i class="fas fa-copy"></i>
                                    </button>

                                    <button class="btn_round remove_node_btn_frm_field" title="Xóa dòng này" disabled>
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row ml-0 bg-light mt-3 border py-3">
                    <div class="col-md-12">
                        <button class="btn btn-outline-lite py-0 add_new_frm_field_btn"><i class="fas fa-plus add_icon"></i> Thêm chủ đề </button>
                    </div>
                </div>
            </div>
        </div>
<!--        Button Save-->
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>