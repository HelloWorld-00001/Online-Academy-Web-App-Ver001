<div class="container-fluid page-header" style="margin-bottom: 90px;">
    <div class="container">
        <div class="d-flex flex-column justify-content-center" style="min-height: 300px">
            <h3 class="display-4 text-white text-uppercase">Teachers</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase"><a class="text-white" href="/teacher">Teachers</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase"><a class="text-white" href="/teacher/courses">Courses</a></p>
            </div>
        </div>
    </div>
</div>

<div class="card container-fluid-py-10">
    <h4 class="card-header d-flex justify-content-between">
        Courses
    </h4>
    {{#if this.empty}}
        <div class="card-body">
            Không có dữ liệu!
        </div>
    {{else}}
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name course</th>
                    <th> Start Day</th>
                    <th> End Day </th>
                    <th>Status</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {{#each this.courses}}
                    <tr>
                        <td scope="row">{{MaKhoaHoc}}</td>
                        <td>{{TenKhoaHoc}}</td>
                        <td>{{#convertDate NgayBD}} {{/convertDate}}</td>
                        <td>{{#convertDate NgayKT}} {{/convertDate}}</td>
                        <td>{{TrangThai}}</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" href="/teacher/input/{{MaKhoaHoc}}" role="button">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                                Edit
                            </a>
                            &nbsp;
                            <a class="btn btn-primary btn-sm" href="/course/detail?id={{MaKhoaHoc}}" role="button" title="View
                            Category">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                View
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}
</div>