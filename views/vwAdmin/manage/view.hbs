<section class="pcoded-main-container">
<div class="frm mt-5" style="min-height: 70vh">
        <div class="container" id="bg">
            <form method="post" class="">
                <div class="row">
                    <div class="col-md-4 frmAvatar">
                        <div class="profile-img">
                            {{#if this.info.Avatar}}
                                {{#isStudent this.info.LoaiTaiKhoan}}
                                    <img src="/public/img/students/{{this.info.Avatar}}" alt="" class="rounded-circle">
                                {{else}}
                                    {{#isAdmin this.info.LoaiTaiKhoan}}
                                        <img src="/public/img/admins/{{this.info.Avatar}}" alt="" class="rounded-circle">
                                    {{else}}
                                        <img src="/public/img/teachers/{{this.info.Avatar}}" alt="" class="rounded-circle">
                                    {{/isAdmin}}
                                {{/isStudent}}
                            {{else}}
                                <img src="/public/img/emptyAva.png" alt="/" class="rounded-circle">
                            {{/if}}
                            <h4 class="my-3" style="color:white">{{this.info.Name}}</h4>
                        </div>
                        {{#isTeacher this.info.LoaiTaiKhoan}}
                            <div style="color:aliceblue;">
                               {{this.info.MoTa}}
                            </div>
                        {{/isTeacher}}
                    </div>
                    <div class="col-md" id="temp">
                        <div class="profile-head">
                            <div class="my-3">
                                <h5>Personal Infomation</h5>
                                <div class="row">
                                    <div class="col-md-6 my-1"><i class="fa fa-user" aria-hidden="true"></i> Full Name: &nbsp;<font color="#C9DEEC">{{this.info.Name}}</font></div>
                                    <div class="col-md my-1"> <i class="fa fa-birthday-cake" aria-hidden="true"></i> <storng>Birthday: &nbsp;</storng><font color="#C9DEEC">
                                        {{#if this.info.DOB}}
                                            {{this.info.DOB}}
                                        {{else}}
                                            empty
                                        {{/if}}
                                    </font></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 my-1"><i class="fa fa-address-card" aria-hidden="true"></i> <storng>Address: &nbsp;</storng><font color="#C9DEEC">
                                        {{#if this.info.DiaChi}}
                                            {{this.info.DiaChi}}
                                        {{else}}
                                            empty
                                        {{/if}}
                                    </font></div>
                                </div>
                            </div>
                        </div>
                        <hr color="grey">
                        <div class="profile-head mt-3">
                            <div class="my-3">
                                <h5>Contact Infomation</h5>
                                <div class="mt-3"><i class="fa fa-envelope" aria-hidden="true"></i> Email: &nbsp;<font color="#C9DEEC">{{this.info.Email}} </font></div>
                                <div class="mt-1"><i class="fa fa-phone" aria-hidden="true"></i><storng> Phone Number: &nbsp;</storng><font color="#C9DEEC">
                                    {{#if this.info.SDT}}
                                        {{this.info.SDT}}
                                    {{else}}
                                        empty
                                    {{/if}}
                                </font></div>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
            </form>
        </div>
</div>
