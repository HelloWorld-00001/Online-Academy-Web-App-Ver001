<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="row">
                        <div class="col-xl-12 col-md-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <div>
                                        <h4>Courses Table</h4>
                                        <span class="d-block m-t-5">Danh sach cac <code>Linh Vuc</code> cua he thong</span>
                                    </div>
                                    <div>
                                        <a name="" id="" class="btn btn-outline-primary float-right"
                                            href="/admin/teacher" role="button"><i class="fa fa-plus" aria-hidden="true"></i> Add more</a>
                                    
                                    </div>
                                    
                                </div>
                                <div class="card-body table-border-style">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Category</th>
                                                    <th>Vid Quantity</th>
                                                    <th>Attendance Quantity</th>
                                                    <th colspan="2">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each this.courses}}
                                                <form method="post" action="" >
                                                <tr class="">
                                                    <td>{{MaKhoaHoc}}</td>
                                                    <td>{{TenKhoaHoc}}</td>
                                                    <td>{{TenLinhVuc}}</td>
                                                    <td>{{SoLuongVideo}}</td>
                                                    <td>{{SLHocVien}}</td>
                                                    <td colspan="2" class="">
                                                        <a href="#" class="view fa-2x" title="View" data-toggle="tooltip"><i class="fas fa-pen fa-sm ml-2 " aria-hidden="true"></i></i></a>
                                                        <button type="submit" class="btn btn-outline-danger btn-sm ml-4" ><center><i class="material-icons">&#xE872;</i></center></button>
                                                    </td>
                                                </tr>
                                                </form>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>